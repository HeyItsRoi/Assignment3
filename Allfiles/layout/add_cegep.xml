<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Add Cegep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:paddingBottom="60dp"
        android:paddingTop="30dp" />

    <TextView
        android:text="Choose a Cegep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:padding="5dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cegepName"
        android:entries="@array/cegep_name"
        android:padding="5dp" />

    <TextView
        android:text="Enter the City"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:padding="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/cityName" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Return to FriendDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frienddb"
            android:layout_weight="1" />

        <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addCegep"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
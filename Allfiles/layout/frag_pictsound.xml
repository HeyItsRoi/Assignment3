<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:baselineAligned="false">

    <TextView
        android:text="Display Friend Picture and Sound"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pictSoundTitle"
        android:textSize="24dp"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:id="@+id/friendInfo"
            android:visibility="gone">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="FriendID:"
                    android:id="@+id/textView2"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/friendID"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:id="@+id/textView4"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/friendName"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Age:"
                    android:id="@+id/textView6"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/friendAge"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="CegepID:"
                    android:id="@+id/textView8"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:id="@+id/cegepID" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:id="@+id/cegepInfo"
            android:visibility="gone" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:visibility="visible" >

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="CegepID:"
                    android:id="@+id/textView25"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:id="@+id/cID" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:visibility="visible" >

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:id="@+id/textView21"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cegepName"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:visibility="visible" >

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="City:"
                    android:id="@+id/textView19"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cegepCity"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:id="@+id/friendPic"
                android:layout_gravity="center_horizontal"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
